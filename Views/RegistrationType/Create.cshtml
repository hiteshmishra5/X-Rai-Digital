@model DOTNETCOREEXAMPLE.Models.Class_REGISTRATION_TYPE

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Class_REGISTRATION_TYPE</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="section-heading-page">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <h1 class="heading-page text-center-xs">@ViewBag.Title.</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb text-right text-center-xs">
                                <li>
                                    <a href="#">Registration Type </a>
                                </li>
                                <li class="active">@ViewBag.Title</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="section section-sm section-bottom">
                <div class="container">

                    <div class="row ">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label asp-for="registrationtypename" class="control-label">Registration Type Name</label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="registrationtypename" class="form-control" />
                                <span asp-validation-for="registrationtypename" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="isactive" /> @Html.DisplayNameFor(model => model.isactive)
                                    </label>
                                </div>
                             </div>
                         </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <input type="submit" value="Create" class="btn btn-default" />

                            </div>
                        </div>
                    </div>
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
