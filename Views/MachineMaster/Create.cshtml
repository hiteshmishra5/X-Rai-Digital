@model DOTNETCOREEXAMPLE.Models.Class_Machine_Master

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/scripts/jquery-1.12.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Class_Machine_Master</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SERVICEGROUPID" class="control-label"></label>
                @Html.DropDownListFor(x => x.SERVICEGROUPID, new SelectList(ViewBag.GROUPSERVICES, "Value", "Text"), "--SELECT--", new { @onchange = "refreshServices($(this).val())", @class = "form-control", @disabled = true })
                <input asp-for="SERVICEGROUPID" class="form-control" />
                <span asp-validation-for="SERVICEGROUPID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MACHINENAME" class="control-label"></label>
                <input asp-for="MACHINENAME" class="form-control" />
                <span asp-validation-for="MACHINENAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ISACTIVE" /> @Html.DisplayNameFor(model => model.ISACTIVE)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LOCATIONID" class="control-label"></label>
                @Html.DropDownListFor(x => x.LOCATIONID, new SelectList(ViewBag.LOCATIONS, "Value", "Text"), "--SELECT--", new { @onchange = "refreshServices($(this).val())", @class = "form-control", @disabled = true })
                <input asp-for="LOCATIONID" class="form-control" />
                <span asp-validation-for="LOCATIONID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
